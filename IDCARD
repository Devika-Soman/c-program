#include<stdio.h>
struct student {
    char name[30];
    int Rollno;
    int classno;
};

int main() {
    struct student s;

    printf("Enter the student details:\n");
    printf("Name: ");
    scanf("%s", s.name);  
    printf("Rollno: ");
    scanf("%d", &s.Rollno);
    printf("Class No: ");
    scanf("%d", &s.classno);

    printf("\nStudent Details:\n");
    printf("Name: %s\n", s.name);
    printf("Rollno: %d\n", s.Rollno);
    printf("Class No: %d\n", s.classno);

    return 0;
}
